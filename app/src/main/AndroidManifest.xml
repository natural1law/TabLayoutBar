<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.androidx.ui">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/clubs"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/clubs"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabLayoutBar"
        tools:ignore="AllowBackup">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommonTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SegmentTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SlidingTabActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>